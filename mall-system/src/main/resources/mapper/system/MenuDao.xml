<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.cmc.mall.module.system.dao.MenuDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.cmc.mall.module.system.entity.MenuEntity" id="menuMap">
        <result property="menuId" column="menu_id"/>
        <result property="parentId" column="parent_id"/>
        <result property="name" column="name"/>
        <result property="url" column="url"/>
        <result property="perms" column="perms"/>
        <result property="type" column="type"/>
        <result property="icon" column="icon"/>
        <result property="orderNum" column="order_num"/>
    </resultMap>


    <!--查询用户所有的菜单-->
    <select id="getAllMenuIdsByUserId" resultType="java.lang.Long">
    select sm.menu_id from sys_menu sm
    left join sys_role_menu srm on srm.menu_id=sm.menu_id
    left join sys_user_role sur on sur.role_id=srm.role_id
    where sur.user_id=#{userId}
    </select>
</mapper>